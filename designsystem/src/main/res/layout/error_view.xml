<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:parentTag="androidx.appcompat.widget.LinearLayoutCompat"
        tools:orientation="vertical"
        tools:background="@color/backgroundColor">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/size_48"
                android:layout_height="@dimen/size_48"
                android:src="@drawable/ic_error"
                android:layout_gravity="center_horizontal"
                tools:tint="@color/errorColor" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/PicPayText.BodyBold"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/spacing_8"
                tools:text="Ocorreu um erro. Por favor, tente novamente!" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/try_again_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/try_again"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_8"
                tools:strokeColor="@color/secondaryColor"
                tools:textColor="@color/secondaryColor"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
</merge>