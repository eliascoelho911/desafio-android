<resources>

    <style name="PicPayText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/onBackgroundColor</item>
    </style>

    <style name="PicPayText.Body" parent="PicPayText"/>

    <style name="PicPayText.BodyBold" parent="PicPayText.Body">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PicPayText.TitleBold" parent="PicPayText">
        <item name="android:textSize">@dimen/text_size_28</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PicPayText.SmallTitle" parent="PicPayText">
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="PicPayText.SmallTitleBold" parent="PicPayText.SmallTitle">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
